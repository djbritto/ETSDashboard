<script>

    $(document).ready(function () {
        $("#orddtl").DataTable({
            "ajax": {
                "url": "/Orders/GetDataGrid",
                "type": "GET",
                "dataType": "json"
            },
            "Columns": [
                { "data": "FirstName", "autoWidth": true },
                { "data": "OrderNumber", "autoWidth": true },
                { "data": "TotalAmount", "autoWidth": true }

            ]
        })

        $("#orddtl2").DataTable({
            "ajax": {
                "url": "/Orders/GetDataGrid2",
                "type": "GET",
                "dataType": "json"
            },
            "Columns": [
                { "data": "FirstName", "autoWidth": true },
                { "data": "OrderNumber", "autoWidth": true },
                { "data": "TotalAmount", "autoWidth": true }

            ]
        })

        $.getJSON("/Orders/GetOrders", function (data) {
            var names = [];
            var qty = [];
            for (var i = 0; i < data.length; i++) {
                names.push(data[i].name);
                qty.push(data[i].count);
            }
            Highcharts.chart('container', {

                title: {
                    text: 'Order Calculation'
                },
                subtitle: {
                    text: 'OverAll-Monthly'
                },
                xAxis: {
                    categories: names
                },
                yAxis: {
                    title: {
                        text: 'Price in Total'
                    }
                },
                plotOptions: {
                    line: {
                        dataLabels: {
                            enabled: true
                        },
                        enableMouseTracking: false
                    }
                },
                series: [{
                    name: 'Master Data',
                    data: qty,
                    type: 'bar',
                    threshold: null,
                    tooltip: {
                        valueDecimals: 2
                    },
                    zones: [{
                        value: 100000,
                        color: '#0082b6'
                    },
                     
                    {
                        value: 200000,
                        color: '#9b351b'
                    }
                    ],
                    fillColor: {
                        linearGradient: {
                            x1: 0,
                            y1: 0,
                            x2: 0,
                            y2: 1
                        },
                        stops: [
                            [0, Highcharts.getOptions().colors[0]],
                            [1, Highcharts.color(Highcharts.getOptions().colors[0]).setOpacity(0).get('rgba')]
                        ]
                    }
                }]


            });


        });


        $.getJSON("/Orders/GetOrders1", function (data) {
            var names = [];
            var qty = [];
            for (var i = 0; i < data.length; i++) {
                names.push(data[i].name);
                qty.push(data[i].count);
            }
            Highcharts.chart('container1', {

                title: {
                    text: 'Order Calculation'
                },
                subtitle: {
                    text: 'OverAll-Monthly'
                },
                xAxis: {
                    categories: names
                },
                yAxis: {
                    title: {
                        text: 'Price in Total'
                    }
                },
                plotOptions: {
                    line: {
                        dataLabels: {
                            enabled: true
                        },
                        enableMouseTracking: false
                    }
                },
                series: [{
                    name: 'Master Data',
                    data: qty,
                    type: 'area',
                    threshold: null,
                    tooltip: {
                        valueDecimals: 2
                    },
                    fillColor: {
                        linearGradient: {
                            x1: 0,
                            y1: 0,
                            x2: 0,
                            y2: 1
                        },
                        stops: [
                            [0, Highcharts.getOptions().colors[0]],
                            [1, Highcharts.color(Highcharts.getOptions().colors[0]).setOpacity(0).get('rgba')]
                        ]
                    }
                }]


            });
        });

    });


</script>


